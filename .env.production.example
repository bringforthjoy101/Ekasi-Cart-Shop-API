#################################################################################
# Ekasi Cart Shop API - Production Environment Configuration
#
# This file provides a template for production environment variables.
# Copy this file to .env and fill in the actual values.
#
# IMPORTANT: Never commit .env file to git - it contains sensitive credentials
#################################################################################

# Application Configuration
APP_NAME=Marvel
NODE_ENV=production
PORT=3001

# Shop Frontend URL (no trailing slash)
# This should point to your production shop frontend
SHOP_URL=https://shop.ekasicart.com

# Main API (Cellerhut) Configuration
# This is the backend API that shop-api proxies requests to
CELLER_HUT_API_URL=https://api.ekasicart.com
CELLER_HUT_API_TIMEOUT=30000

# Currency Configuration
DEFAULT_CURRENCY=USD

################################################################################
# PAYMENT GATEWAY CONFIGURATION
################################################################################

# Stripe Payment Gateway
# Get your API keys from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx

# PayPal Payment Gateway
# Get credentials from: https://developer.paypal.com/
# Values: 'sandbox' for testing, 'live' for production
PAYPAL_MODE=live

# PayPal Sandbox Credentials (for testing)
PAYPAL_SANDBOX_CLIENT_ID=
PAYPAL_SANDBOX_CLIENT_SECRET=

# PayPal Live Credentials (for production)
PAYPAL_LIVE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxx
PAYPAL_LIVE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxx

# PayPal Webhook ID (for payment notifications)
# Configure webhooks at: https://developer.paypal.com/developer/applications
PAYPAL_WEBHOOK_ID=xxxxxxxxxxxxxxxxxxxxx

################################################################################
# OPTIONAL CONFIGURATION
################################################################################

# API Rate Limiting
# API_RATE_LIMIT_MAX=100
# API_RATE_LIMIT_WINDOW=15

# Logging
# LOG_LEVEL=info
# LOG_FORMAT=json

# CORS Origins (comma-separated)
# CORS_ORIGINS=https://shop.ekasicart.com,https://www.ekasicart.com

################################################################################
# IMPORTANT NOTES
################################################################################
#
# 1. Update SHOP_URL to your production frontend domain
# 2. Update CELLER_HUT_API_URL to your production main API
# 3. Use live payment gateway credentials (not sandbox)
# 4. Set PAYPAL_MODE=live for production
# 5. Ensure all API keys are from production/live environments
# 6. Never commit actual .env file to version control
# 7. Keep credentials secure and rotate them periodically
#
################################################################################
